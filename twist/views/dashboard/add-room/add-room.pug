  meta(name='viewport' content='width=device-width, initial-scale=1.0')
h2 Add Room
div
  .form_container
    form(method='POST' action='')
      label(for='name') Room Name:
      br
      input#room(type='text' name='roomNumber' placeholder='eg. TC162' value=(undefined===name ? '' : roomName) required='')
      br
      br
      br
      label(for='capacity') Capacity:
      br
      input#capacity(type='text' name='capacity' placeholder='15' value=(undefined===capacity ? '' : capacity) required='')
      br
      br
      br
      div
        p=(undefined===exists ? '' : exists)
        p=errors
      input(type='submit' value='Submit')
      input(type='button' value='Back to Home' onclick="window.location.href = '/dashboard'")